<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PickupAndroid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="colorPrimary" >@color/colorPrimary</item>

        <!-- Button attributes (applied to all buttons in group) -->
        <item name="materialButtonOutlinedStyle">@style/MyToggleButtonStyle</item>


    </style>

    <style name="MyToggleButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/markedColor</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/markedColor</item>
    </style>

    <style name="Theme.APISplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/colorSplashScreenBackground</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_v2</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.PickupAndroid</item>
    </style>


</resources>